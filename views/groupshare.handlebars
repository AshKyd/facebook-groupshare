{{>facebook-extensions}}

<header>
  <form action="groupshare" method="get">
    <input type="search" name="search" value="{{search}}" placeholder="Search ABC News articles" />
  </form>
</header>

<div class="main">
  {{#collections}}
  <h2>{{title}}</h2>
  {{#if message}}<p>{{message}}</p>{{/if}}
  <ul>
    {{#documents}}
    <li>
      <a href="{{url}}" data-short-teaser-title="{{short_teaser_title}}" data-short-teaser-text="{{short_teaser_text}}" data-image="{{image_url}}">
        <img src="{{image_url_proxy}}" />
        {{teaser_title}}
      </a>
    </li>
    {{/documents}}
  </ul>
  {{/collections}}
</div>

<script src="{{checksum '/js/index.js'}}" type="text/javascript"></script>
